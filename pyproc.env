{
   "tool": "pyproc",
   "version": "0.1.2",
   "platforms": ["darwin", "linux", "windows"],
   "requires": ["arnold", "python"],
   "environment":
   {
      "ARNOLD_PROCEDURAL_PATH": {"abs": True,
                                 "if_exists": True,
                                 "common": "@path/@tool/@version/a${ARNOLD_VERSION}py${PYTHON_VERSION}"},
      "ARNOLD_PLUGIN_PATH": {"abs": True,
                             "if_matches": {"ARNOLD_VERSION": "^([5-9]|\d{2,})\."},
                             "common": "@path/@tool/@version/a${ARNOLD_VERSION}py${PYTHON_VERSION}"}
   }
}
